<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".button2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:id="@+id/prev"
            android:layout_weight="1"
            android:onClick = "onClickPrev"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:id="@+id/next"
            android:layout_weight="1"
            android:onClick = "onClickNext"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@id/linear1">

        <Button
            android:id="@+id/image2_1"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/image2_1" />

        <Button
            android:id="@+id/image2_2"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/image2_2" />

        <Button
            android:id="@+id/image2_3"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/image2_3" />

        <Button
            android:id="@+id/image2_4"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/image2_4" />

        <Button
            android:id="@+id/image2_5"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/image2_5" />

        <Button
            android:id="@+id/image2_6"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/image2_6"  />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text = "자세한 설명을 보려면 그림을 누르세요" />
    </LinearLayout>
</LinearLayout>